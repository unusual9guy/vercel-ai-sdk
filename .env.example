# ===========================================
# Airweave Configuration
# ===========================================
# Your Airweave API key (get from https://app.airweave.ai)
AIRWEAVE_API_KEY=

# The readable_id of your collection containing Notion data
# You can find this in your Airweave dashboard
AIRWEAVE_COLLECTION_ID=

# Airweave API base URL (optional, defaults to https://api.airweave.ai)
AIRWEAVE_API_URL=https://api.airweave.ai

# ===========================================
# LLM Provider Configuration
# ===========================================
# Current provider: google (Gemini)
LLM_PROVIDER=google

# Google Gemini API key (get from https://makersuite.google.com/app/apikey)
GOOGLE_GENERATIVE_AI_API_KEY=

# OpenAI API key (for future use)
OPENAI_API_KEY=

# Anthropic API key (for future use)
ANTHROPIC_API_KEY=

# ===========================================
# Search Configuration
# ===========================================
# Default search type: hybrid, semantic, or keyword
DEFAULT_SEARCH_TYPE=hybrid

# Maximum number of results to return
MAX_RESULTS=10

# ===========================================
# Output Configuration
# ===========================================
# Default output format: json or text
DEFAULT_OUTPUT_FORMAT=json
